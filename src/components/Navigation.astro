---
// Navigation component as Astro file
---

<nav class="bg-white shadow-sm border-b border-gray-100 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center cursor-pointer group">
          <span class="text-2xl font-bold text-blue-600 transition-all duration-300 group-hover:text-blue-700 group-hover:scale-105">InvoiceFlow</span>
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="#features" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-semibold cursor-pointer transition-all duration-300 hover:scale-105 hover:bg-blue-50 rounded-lg relative group" aria-label="Navigate to Features section">
            Features
            <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full group-hover:left-0"></span>
          </a>
          <a href="#pricing" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-semibold cursor-pointer transition-all duration-300 hover:scale-105 hover:bg-blue-50 rounded-lg relative group" aria-label="Navigate to Pricing section">
            Pricing
            <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full group-hover:left-0"></span>
          </a>
          <a href="#about" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-semibold cursor-pointer transition-all duration-300 hover:scale-105 hover:bg-blue-50 rounded-lg relative group" aria-label="Navigate to About section">
            About
            <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full group-hover:left-0"></span>
          </a>
          <a href="#contact" class="text-gray-700 hover:text-blue-600 px-3 py-2 text-sm font-semibold cursor-pointer transition-all duration-300 hover:scale-105 hover:bg-blue-50 rounded-lg relative group" aria-label="Navigate to Contact section">
            Contact
            <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full group-hover:left-0"></span>
          </a>
        </div>
      </div>
      
      <!-- CTA Button -->
      <div class="hidden md:block">
        <button class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg text-sm font-bold cursor-pointer transition-all duration-300 hover:scale-105 hover:shadow-lg transform active:scale-95 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" aria-label="Join the waitlist">
          Join Waitlist
        </button>
      </div>
      
      <!-- Mobile Menu Button -->
      <button class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-blue-600 hover:bg-blue-50 cursor-pointer transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500 transform active:scale-95" id="mobile-menu-btn" aria-label="Toggle mobile menu">
        <span class="sr-only">Open main menu</span>
        <svg class="block h-6 w-6 transition-transform duration-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div class="md:hidden hidden transition-all duration-300" id="mobile-nav">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t border-gray-100">
      <a href="#features" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-semibold cursor-pointer transition-all duration-300 hover:bg-blue-50 rounded-lg hover:translate-x-1" aria-label="Navigate to Features section">Features</a>
      <a href="#pricing" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-semibold cursor-pointer transition-all duration-300 hover:bg-blue-50 rounded-lg hover:translate-x-1" aria-label="Navigate to Pricing section">Pricing</a>
      <a href="#about" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-semibold cursor-pointer transition-all duration-300 hover:bg-blue-50 rounded-lg hover:translate-x-1" aria-label="Navigate to About section">About</a>
      <a href="#contact" class="text-gray-700 hover:text-blue-600 block px-3 py-2 text-base font-semibold cursor-pointer transition-all duration-300 hover:bg-blue-50 rounded-lg hover:translate-x-1" aria-label="Navigate to Contact section">Contact</a>
      <button class="w-full mt-4 bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg text-sm font-bold cursor-pointer transition-all duration-300 hover:scale-105 hover:shadow-lg transform active:scale-95 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" aria-label="Join the waitlist">
        Join Waitlist
      </button>
    </div>
  </div>
</nav>

<script>
  // Navigation functionality
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileNav = document.getElementById('mobile-nav');
    
    // Mobile menu toggle
    if (mobileMenuBtn && mobileNav) {
      mobileMenuBtn.addEventListener('click', function() {
        mobileNav.classList.toggle('hidden');
      });
    }
    
    // Smooth scrolling for all navigation links
    const allNavLinks = document.querySelectorAll('nav a[href^="#"]');
    allNavLinks.forEach(link => {
      link.addEventListener('click', function(event) {
        event.preventDefault();
        const targetId = link.getAttribute('href');
        const targetElement = document.querySelector(targetId);
        
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
        
        // Close mobile menu if open
        if (mobileNav && !mobileNav.classList.contains('hidden')) {
          mobileNav.classList.add('hidden');
        }
      });
    });
    
    // Smooth scrolling for waitlist buttons
     const waitlistButtons = document.querySelectorAll('nav button[aria-label*="waitlist"], nav button[aria-label*="Waitlist"]');
     waitlistButtons.forEach(button => {
       button.addEventListener('click', function() {
         const waitlistForm = document.querySelector('.waitlist-form');
         if (waitlistForm) {
           waitlistForm.scrollIntoView({
             behavior: 'smooth',
             block: 'start'
           });
         }
       });
     });
     
     // Add hover effect listeners for better browser compatibility
     const hoverElements = document.querySelectorAll('nav a, nav button');
     hoverElements.forEach(element => {
       element.addEventListener('mouseenter', function() {
         this.style.cursor = 'pointer';
       });
     });
  });
</script>