---
// Problem/Solution section component for InvoiceFlow landing page
---

<section class="py-20 bg-gradient-to-b from-slate-50 to-white">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        Stop Chasing <span class="text-blue-600">Payments</span>
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto">
        Transform your invoicing from a time-consuming headache into an automated revenue engine
      </p>
    </div>

    <!-- Before/After Comparison -->
    <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Problem (Before) -->
      <div class="bg-red-50 rounded-2xl p-8 border border-red-100">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-red-900">Manual Invoicing</h3>
        </div>
        
        <div class="space-y-4">
          <div class="flex items-start">
            <div class="w-2 h-2 bg-red-400 rounded-full mt-2 mr-3 flex-shrink-0"></div>
            <p class="text-red-800">Spend 2-3 hours creating each invoice manually</p>
          </div>
          <div class="flex items-start">
            <div class="w-2 h-2 bg-red-400 rounded-full mt-2 mr-3 flex-shrink-0"></div>
            <p class="text-red-800">Chase clients for payments via endless emails</p>
          </div>
          <div class="flex items-start">
            <div class="w-2 h-2 bg-red-400 rounded-full mt-2 mr-3 flex-shrink-0"></div>
            <p class="text-red-800">Wait 45+ days to get paid on average</p>
          </div>
          <div class="flex items-start">
            <div class="w-2 h-2 bg-red-400 rounded-full mt-2 mr-3 flex-shrink-0"></div>
            <p class="text-red-800">Lose track of outstanding invoices</p>
          </div>
          <div class="flex items-start">
            <div class="w-2 h-2 bg-red-400 rounded-full mt-2 mr-3 flex-shrink-0"></div>
            <p class="text-red-800">Inconsistent branding and formatting</p>
          </div>
        </div>

        <!-- Time Visualization -->
        <div class="mt-8 p-4 bg-red-100 rounded-lg">
          <div class="text-center">
            <div class="text-3xl font-bold text-red-700 mb-1">45+ Days</div>
            <div class="text-sm text-red-600">Average payment time</div>
          </div>
        </div>
      </div>

      <!-- Solution (After) -->
      <div class="bg-green-50 rounded-2xl p-8 border border-green-100">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-green-900">InvoiceFlow Automation</h3>
        </div>
        
        <div class="space-y-4">
          <div class="flex items-start">
            <div class="w-2 h-2 bg-green-400 rounded-full mt-2 mr-3 flex-shrink-0"></div>
            <p class="text-green-800">Generate professional invoices in under 30 seconds</p>
          </div>
          <div class="flex items-start">
            <div class="w-2 h-2 bg-green-400 rounded-full mt-2 mr-3 flex-shrink-0"></div>
            <p class="text-green-800">Automated payment reminders and follow-ups</p>
          </div>
          <div class="flex items-start">
            <div class="w-2 h-2 bg-green-400 rounded-full mt-2 mr-3 flex-shrink-0"></div>
            <p class="text-green-800">Get paid in 7-14 days with smart reminders</p>
          </div>
          <div class="flex items-start">
            <div class="w-2 h-2 bg-green-400 rounded-full mt-2 mr-3 flex-shrink-0"></div>
            <p class="text-green-800">Real-time payment tracking and analytics</p>
          </div>
          <div class="flex items-start">
            <div class="w-2 h-2 bg-green-400 rounded-full mt-2 mr-3 flex-shrink-0"></div>
            <p class="text-green-800">Consistent, professional branding</p>
          </div>
        </div>

        <!-- Time Visualization -->
        <div class="mt-8 p-4 bg-green-100 rounded-lg">
          <div class="text-center">
            <div class="text-3xl font-bold text-green-700 mb-1">7-14 Days</div>
            <div class="text-sm text-green-600">Average payment time</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Impact Stats -->
    <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
      <div class="text-center">
        <div class="text-3xl font-bold text-blue-600 mb-2">95%</div>
        <div class="text-slate-600">Time Saved</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-blue-600 mb-2">3x</div>
        <div class="text-slate-600">Faster Payments</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-blue-600 mb-2">$50K+</div>
        <div class="text-slate-600">Avg. Revenue Boost</div>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-blue-600 mb-2">99%</div>
        <div class="text-slate-600">Payment Success</div>
      </div>
    </div>
  </div>
</section>