---
// Hero Section component as Astro file
import WaitlistForm from './WaitlistForm.svelte';
---

<section class="relative min-h-screen flex items-center overflow-hidden pt-18">
  <!-- Background -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_25%_25%,rgba(255,255,255,0.1)_1px,transparent_1px)] bg-[length:50px_50px] opacity-30"></div>
  </div>
  
  <div class="max-w-7xl mx-auto px-6 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Left Column: Copy & CTA -->
      <div class="space-y-8">
        <h1 class="text-5xl lg:text-6xl font-bold text-white leading-tight">
          Stop wasting 20 minutes
          <span class="bg-gradient-to-r from-emerald-400 to-emerald-300 bg-clip-text text-transparent">chasing payments</span>
        </h1>
        
        <p class="text-xl text-gray-300 leading-relaxed max-w-lg">
          InvoiceFlow sends polite reminders automatically, cutting invoice time from 20 minutes to 60 seconds.
        </p>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div class="flex items-center space-x-3 text-gray-300">
            <span class="text-2xl">âš¡</span>
            <span class="text-sm font-medium">Create invoices in 60 seconds</span>
          </div>
          <div class="flex items-center space-x-3 text-gray-300">
            <span class="text-2xl">ðŸ”„</span>
            <span class="text-sm font-medium">Automated payment reminders</span>
          </div>
          <div class="flex items-center space-x-3 text-gray-300">
            <span class="text-2xl">ðŸ’³</span>
            <span class="text-sm font-medium">One-click client payments</span>
          </div>
          <div class="flex items-center space-x-3 text-gray-300">
            <span class="text-2xl">ðŸ“Š</span>
            <span class="text-sm font-medium">Track cash flow in real-time</span>
          </div>
        </div>
        
        <!-- Waitlist Form Component -->
        <WaitlistForm client:load />
      </div>
      
      <!-- Right Column: Hero Visual -->
      <div class="relative">
        <div class="bg-white rounded-xl shadow-2xl overflow-hidden transform rotate-3 hover:rotate-0 transition-transform duration-300">
          <div class="bg-gray-100 px-4 py-3 flex items-center justify-between border-b">
            <div class="flex space-x-2">
              <span class="w-3 h-3 bg-red-500 rounded-full"></span>
              <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
              <span class="w-3 h-3 bg-green-500 rounded-full"></span>
            </div>
            <div class="text-sm font-medium text-gray-700">InvoiceFlow Dashboard</div>
          </div>
          
          <div class="p-6 space-y-6">
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-blue-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-blue-600">$12,450</div>
                <div class="text-sm text-gray-600">This Month</div>
                <div class="text-xs text-green-600 font-medium">+23%</div>
              </div>
              <div class="bg-emerald-50 p-4 rounded-lg">
                <div class="text-2xl font-bold text-emerald-600">3.2 days</div>
                <div class="text-sm text-gray-600">Avg Payment Time</div>
                <div class="text-xs text-green-600 font-medium">-15 days</div>
              </div>
            </div>
            
            <div class="space-y-3">
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border-l-4 border-green-500">
                <div>
                  <div class="font-medium text-gray-900">Acme Corp</div>
                  <div class="text-lg font-bold text-gray-900">$2,500</div>
                </div>
                <div class="px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">Paid</div>
              </div>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border-l-4 border-yellow-500">
                <div>
                  <div class="font-medium text-gray-900">Tech Startup</div>
                  <div class="text-lg font-bold text-gray-900">$1,800</div>
                </div>
                <div class="px-3 py-1 bg-yellow-100 text-yellow-800 text-sm font-medium rounded-full">Pending</div>
              </div>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border-l-4 border-red-500">
                <div>
                  <div class="font-medium text-gray-900">Design Agency</div>
                  <div class="text-lg font-bold text-gray-900">$3,200</div>
                </div>
                <div class="px-3 py-1 bg-red-100 text-red-800 text-sm font-medium rounded-full">Overdue</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>