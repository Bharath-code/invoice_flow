# Environment Configuration for InvoiceFlow Landing Page
# Copy this file to .env.local for local development
# Set these variables in Vercel dashboard for production

# Supabase Configuration (Required for waitlist functionality)
# Get these values from your Supabase project dashboard
PUBLIC_SUPABASE_URL=your_supabase_project_url
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Example:
# PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
# PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Vercel Analytics (Optional - automatically enabled in Vercel)
# VERCEL_ANALYTICS_ID=your_analytics_id_here

# Site Configuration
SITE_URL=https://invoiceflow.com
SITE_NAME="InvoiceFlow"
SITE_DESCRIPTION="Professional invoice management made simple. Create, send, and track invoices with ease."

# Contact Information
CONTACT_EMAIL=hello@invoiceflow.com
SUPPORT_EMAIL=support@invoiceflow.com

# Social Media Links
TWITTER_URL=https://twitter.com/invoiceflow
LINKEDIN_URL=https://linkedin.com/company/invoiceflow
GITHUB_URL=https://github.com/invoiceflow

# Feature Flags (Optional)
ENABLE_WAITLIST=true
ENABLE_ANALYTICS=true
ENABLE_SPEED_INSIGHTS=true

# Development Settings
NODE_ENV=development
DEBUG=false